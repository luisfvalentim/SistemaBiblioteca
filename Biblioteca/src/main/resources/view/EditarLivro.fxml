<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.LivroController">
   <children>
      <!-- MenuBar -->
      <MenuBar style="-fx-border-color: #0f0099; -fx-border-width: 0px 0px 2px;" />

      <!-- AnchorPane Principal -->
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <!-- Título -->
            <Label layoutX="230.0" layoutY="30.0" text="Editar Livro" textFill="#0f0099" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- Seleção do Livro -->
            <Label layoutX="160.0" layoutY="88.0" text="Selecione o Livro" textFill="#0f0099" />
            <ComboBox fx:id="comboLivro" layoutX="225.0" layoutY="84.0" prefWidth="200.0" promptText="Selecione o Livro" style="-fx-border-color: #0f0099;" />

            <!-- Campos de Texto -->

            <Label layoutX="160.0" layoutY="50.0" text="Código" textFill="#0f0099" />
            <TextField fx:id="campoCodigo" layoutX="225.0" layoutY="46.0" prefWidth="200.0" promptText="Digite o Código" style="-fx-border-color: #0f0099;" />

            <Label layoutX="160.0" layoutY="130.0" text="Título" textFill="#0f0099" />
            <TextField fx:id="campoTitulo" layoutX="225.0" layoutY="126.0" prefWidth="200.0" promptText="Digite o Título" style="-fx-border-color: #0f0099;" />

            <Label layoutX="160.0" layoutY="170.0" text="Autor" textFill="#0f0099" />
            <TextField fx:id="campoAutor" layoutX="225.0" layoutY="166.0" prefWidth="200.0" promptText="Digite o Autor" style="-fx-border-color: #0f0099;" />

            <Label layoutX="160.0" layoutY="210.0" text="Editora" textFill="#0f0099" />
            <TextField fx:id="campoEditora" layoutX="225.0" layoutY="206.0" prefWidth="200.0" promptText="Digite a Editora" style="-fx-border-color: #0f0099;" />

            <Label layoutX="160.0" layoutY="250.0" text="ISBN" textFill="#0f0099" />
            <TextField fx:id="campoIsbn" layoutX="225.0" layoutY="246.0" prefWidth="200.0" promptText="Digite o ISBN" style="-fx-border-color: #0f0099;" />

            <Label layoutX="160.0" layoutY="290.0" text="Ano" textFill="#0f0099" />
            <TextField fx:id="campoAno" layoutX="225.0" layoutY="286.0" prefWidth="200.0" promptText="Digite o Ano" style="-fx-border-color: #0f0099;" />

            <Label layoutX="160.0" layoutY="330.0" text="Edição" textFill="#0f0099" />
            <TextField fx:id="campoEdicao" layoutX="225.0" layoutY="326.0" prefWidth="200.0" promptText="Digite a Edição" style="-fx-border-color: #0f0099;" />

            <!-- CheckBoxes -->
            <CheckBox fx:id="checkboxDisponivel" layoutX="160.0" layoutY="370.0" text="Disponível" />
            <CheckBox fx:id="checkboxExemplarBiblioteca" layoutX="280.0" layoutY="370.0" text="Exemplar Biblioteca" />

            <!-- Botão Editar -->
            <Button layoutX="268.0" layoutY="410.0" text="Salvar Alterações" onAction="#editarLivro" style="-fx-background-color: #0f0099; -fx-text-fill: white; -fx-background-radius: 5px;" />
         </children>
      </AnchorPane>
   </children>
</VBox>
