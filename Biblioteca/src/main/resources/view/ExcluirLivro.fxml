<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.LivroController">
    <children>

        <!-- AnchorPane -->
        <AnchorPane prefHeight="400.0" prefWidth="600.0">
            <children>
                <!-- Labels -->
                <Label layoutX="240.0" layoutY="30.0" text="Excluir Livro" textFill="#0f0099" style="-fx-font-size: 18px;" />
                <Label layoutX="160.0" layoutY="100.0" text="Selecionar Livro" textFill="#0f0099" />

                <!-- ComboBox -->
                <ComboBox fx:id="comboLivro" layoutX="230.0" layoutY="95.0" prefWidth="200.0" promptText="Selecione o Livro" />

                <!-- BotÃ£o Excluir -->
                <Button layoutX="260.0" layoutY="150.0" text="Excluir" onAction="#excluirLivro" style="-fx-background-color: #d32f2f; -fx-text-fill: white;" />

                <!-- Logo -->
                <ImageView layoutX="470.0" layoutY="10.0" fitHeight="80.0" fitWidth="100.0">
                    <image>
                        <Image url="@logo-uenp.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </children>
</VBox>
