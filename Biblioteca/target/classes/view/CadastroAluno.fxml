<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.AlunoController">
   <children>
      <!-- MenuBar -->
      <MenuBar style="-fx-border-color: #0f0099; -fx-border-width: 0px 0px 2px;">
      </MenuBar>

      <!-- AnchorPane Principal -->
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <!-- Título -->
            <Label layoutX="220.0" layoutY="30.0" text="Cadastro de Aluno" textFill="#0f0099" style="-fx-font-size: 18px;" />

            <!-- Campos para Cadastro -->
            <Label layoutX="160.0" layoutY="88.0" text="Nome" />
            <TextField fx:id="campoNome" layoutX="240.0" layoutY="85.0" promptText="Digite o nome" />

            <Label layoutX="160.0" layoutY="128.0" text="Matrícula" />
            <TextField fx:id="campoMatricula" layoutX="240.0" layoutY="125.0" promptText="Digite a matrícula" />

            <Label layoutX="160.0" layoutY="168.0" text="CPF" />
            <TextField fx:id="campoCpf" layoutX="240.0" layoutY="165.0" promptText="Digite o CPF" />

            <Label layoutX="160.0" layoutY="208.0" text="Endereço" />
            <TextField fx:id="campoEndereco" layoutX="240.0" layoutY="205.0" promptText="Digite o endereço" />

            <!-- Botão Salvar -->
            <Button layoutX="260.0" layoutY="260.0" text="Salvar" onAction="#cadastrarAluno" style="-fx-background-color: #0f0099; -fx-text-fill: white;" />
         </children>
      </AnchorPane>
   </children>
</VBox>
