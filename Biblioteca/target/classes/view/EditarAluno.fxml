<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.AlunoController">
   <children>
      <!-- MenuBar -->
      <MenuBar style="-fx-border-color: #0f0099; -fx-border-width: 0px 0px 2px;">
      </MenuBar>

      <!-- AnchorPane Principal -->
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <!-- Título -->
            <Label layoutX="230.0" layoutY="30.0" text="Editar Aluno" textFill="#0f0099" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- Seleção do Aluno -->
            <Label layoutX="160.0" layoutY="88.0" text="Selecione o Aluno" textFill="#0f0099" />
            <ComboBox fx:id="comboAluno" layoutX="225.0" layoutY="84.0" prefWidth="200.0" promptText="Selecione o Aluno" style="-fx-border-color: #0f0099;" />

            <!-- Campos de Texto -->
            <Label layoutX="160.0" layoutY="130.0" text="Nome" textFill="#0f0099" />
            <TextField fx:id="campoNome" layoutX="225.0" layoutY="126.0" prefWidth="200.0" promptText="Digite o Nome" style="-fx-border-color: #0f0099;" />

            <Label layoutX="160.0" layoutY="170.0" text="Matrícula" textFill="#0f0099" />
            <TextField fx:id="campoMatricula" layoutX="225.0" layoutY="166.0" prefWidth="200.0" promptText="Digite a Matrícula" style="-fx-border-color: #0f0099;" />

            <Label layoutX="160.0" layoutY="210.0" text="CPF" textFill="#0f0099" />
            <TextField fx:id="campoCpf" layoutX="225.0" layoutY="206.0" prefWidth="200.0" promptText="Digite o CPF" style="-fx-border-color: #0f0099;" />

            <Label layoutX="160.0" layoutY="250.0" text="Endereço" textFill="#0f0099" />
            <TextField fx:id="campoEndereco" layoutX="225.0" layoutY="246.0" prefWidth="200.0" promptText="Digite o Endereço" style="-fx-border-color: #0f0099;" />

            <!-- Botão Editar -->
            <Button layoutX="268.0" layoutY="300.0" text="Salvar Alterações" onAction="#editarAluno" style="-fx-background-color: #0f0099; -fx-text-fill: white; -fx-background-radius: 5px;" />
         </children>
      </AnchorPane>
   </children>
</VBox>
